#!/usr/bin/env ruby
# SPDX-FileCopyrightText: Copyright (c) 2017-2025 Yegor Bugayenko
# SPDX-License-Identifier: MIT

STDOUT.sync = true
XML_PATTERNS = ['**/*.xml', '**/*.xsd', '**/*.xsl', '**/*.xhtml', '**/*.html'].freeze
XML_EXTENSIONS = ['.xml', '.xsd', '.xsl', '.xhtml', '.html'].freeze

require 'slop'
require 'nokogiri'
require 'set'
require_relative '../lib/xcop/cli'
require_relative '../lib/xcop/version'

if Gem::Version.new(Nokogiri::VERSION) < Gem::Version.new('1.8')
  puts "Nokogiri version #{Nokogiri::VERSION} is too old, 1.8+ is required"
end

def config(path)
  f = File.expand_path(path)
  args = []
  args += File.readlines(f).map(&:strip) if File.exist?(f)
  args
end

def collect_user_input(arguments)
  arguments.map { |f| File.expand_path(f) }
end

def include_files(paths, to_include)
  result = paths.dup
  return result if to_include.nil? || to_include.empty?
  to_include.each { |glob| result.concat(Dir.glob(glob, File::FNM_DOTMATCH).map { |f| File.expand_path(f) }) }
  result
end

def expand_directories(paths)
  result = []
  paths.each do |path|
    case
    when File.directory?(path)
      XML_PATTERNS.each { |pattern| result.concat(Dir.glob(File.join(path, pattern), File::FNM_DOTMATCH)) }
    when File.file?(path)
      result << path
    else
      raise "Path does not exist: #{path}"
    end
  end
  result
end

def filter_supported_files(files)
  files.select do |file|
    XML_EXTENSIONS.any? { |ext| file.end_with?(ext) }
  end
end

def exclude_files(files, exclude_patterns)
  return files if exclude_patterns.nil? || exclude_patterns.empty?
  files.reject do |file|
    exclude_patterns.any? { |pattern| file_matches_exclude?(file, pattern) }
  end
end

def file_matches_exclude?(file, pattern)
  if File.exist?(pattern)
    if File.directory?(pattern)
      file.start_with?(File.expand_path(pattern))
    else
      File.expand_path(file) == File.expand_path(pattern)
    end
  else
    File.fnmatch?(pattern, file, File::FNM_PATHNAME) ||
    File.fnmatch?(pattern, File.basename(file), File::FNM_PATHNAME) ||
    File.fnmatch?("**/#{pattern}", file, File::FNM_PATHNAME)
  end
end

args = config('~/.xcop') + config('.xcop') + ARGV

opts = Slop.parse(args, strict: true, help: true) do |o|
  o.banner = "Usage (#{Xcop::VERSION}): xcop [options] [files...]"
  o.bool '-h', '--help', 'Show these instructions'
  o.bool '-q', '--quiet', 'Don\'t print anything if there are no errors'
  o.bool '--version', 'Show current version'
  o.bool '--fix', 'Fix all files instead of reporting their problems'
  o.bool '--nocolor', 'Suppress colored output'
  o.array '--include', 'Glob pattern(s) to include'
  o.array '--exclude', 'Glob pattern(s) to exclude'
end

if opts.help?
  puts opts
  exit
end

if opts.version?
  puts Xcop::VERSION
  exit
end

Encoding.default_external = Encoding::UTF_8
Encoding.default_internal = Encoding::UTF_8

files = collect_user_input(opts.arguments)
files = include_files(files, opts[:include])
files = expand_directories(files)
files = filter_supported_files(files)
files = exclude_files(files.uniq, opts[:exclude])

if opts.fix?
  Xcop::CLI.new(files).fix do |f|
    puts "#{f} fixed" unless opts.quiet?
  end
else
  begin
    Xcop::CLI.new(files, nocolor: opts.nocolor?).run do |f|
      puts "#{f} looks good" unless opts.quiet?
    end
  rescue StandardError => e
    puts e.message
    exit 1
  end
end
